<%= form_for(@ride) do |f| %>
  <% if @ride.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ride.errors.count, "error") %> prohibited this ride from being saved:</h2>

      <ul>
      <% @ride.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :direction %><br>
    <%= f.select :direction, Ride.direction_options %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.datetime_select :time %>
  </div>
  <%= f.hidden_field :type %>
  <%= f.hidden_field :user_id %>

  <% if @ride.type == 'RideOffer' %>
    <div class="field">
      <%= f.label :freeSeats %><br>
      <%= f.number_field :freeSeats %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :type, Ride.select_options %>
  </div>

  <div class="field">
    <%= f.label :fromAddress %><br>
    <%= f.text_field :fromAddress %>
  </div>
  <div class="field">
    <%= f.label :toAddress %><br>
    <%= f.text_field :toAddress %>
  </div>
  <div class="field">
    <%= f.label :fromCity %><br>
    <%= f.text_field :fromCity %>
  </div>
  <div class="field">
    <%= f.label :toCity %><br>
    <%= f.text_field :toCity %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
